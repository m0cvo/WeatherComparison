@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<body>

<canvas id="myChart" style="width:100%;max-width:600px"></canvas>

<script>
const xValues = ["s", "01/10", "02/10", "03/10", "04/10", "05/10" ];
const yValues = [0, 16, 12, 9, 10, 12];
const barColors = "blue";

new Chart("myChart", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "Temperature range comparison September 2023"
    }
  }
});
</script>
<p>
    The chart on this page demonstrates the trend of the temperature in Celsius each morning at the same time (07:30 UTC) across a period of one month.  Further charts will be added to show trends across different months.
</p>
</body>
</html>

